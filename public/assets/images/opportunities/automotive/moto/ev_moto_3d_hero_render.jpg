<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0A192F;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#020617;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bike" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#D4AF37;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F4E5B1;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="1920" height="1080" fill="url(#bg)"/>
  
  <!-- European Electric Motorbike Silhouette -->
  <g transform="translate(960, 600)">
    <!-- Bike Frame -->
    <ellipse cx="0" cy="-50" rx="350" ry="120" fill="url(#bike)" opacity="0.3"/>
    <path d="M -300,-80 L -150,-20 L 0,-40 L 150,-20 L 300,-80" stroke="url(#bike)" stroke-width="8" fill="none" opacity="0.6"/>
    
    <!-- Wheels -->
    <circle cx="-250" cy="50" r="80" stroke="url(#bike)" stroke-width="12" fill="none" opacity="0.8"/>
    <circle cx="250" cy="50" r="80" stroke="url(#bike)" stroke-width="12" fill="none" opacity="0.8"/>
    <circle cx="-250" cy="50" r="15" fill="#D4AF37"/>
    <circle cx="250" cy="50" r="15" fill="#D4AF37"/>
    
    <!-- Seat -->
    <ellipse cx="0" cy="-60" rx="100" ry="30" fill="url(#bike)" opacity="0.7"/>
    
    <!-- Handlebars -->
    <path d="M -80,-100 Q 0,-120 80,-100" stroke="url(#bike)" stroke-width="10" fill="none" opacity="0.6"/>
    
    <!-- Electric Lightning Bolt -->
    <path d="M 0,-150 L -20,-100 L 10,-100 L -10,-50 L 30,-100 L 0,-100 Z" fill="#00D9FF" opacity="0.8"/>
  </g>
  
  <!-- Title -->
  <text x="960" y="200" font-family="Montserrat, sans-serif" font-size="90" font-weight="800" fill="#D4AF37" text-anchor="middle">ELECTRIC MOTORBIKE</text>
  <text x="960" y="270" font-family="Inter, sans-serif" font-size="40" fill="#F4E5B1" text-anchor="middle">Italian Design â€¢ Urban E-Mobility</text>
  
  <!-- Italian Flag Colors Accent -->
  <rect x="800" y="900" width="80" height="50" fill="#009246" opacity="0.4"/>
  <rect x="880" y="900" width="80" height="50" fill="#F1F2F1" opacity="0.4"/>
  <rect x="960" y="900" width="80" height="50" fill="#CE2B37" opacity="0.4"/>
  
  <!-- Grid Pattern -->
  <g opacity="0.08">
    <line x1="0" y1="360" x2="1920" y2="360" stroke="#D4AF37" stroke-width="1"/>
    <line x1="0" y1="720" x2="1920" y2="720" stroke="#D4AF37" stroke-width="1"/>
    <line x1="640" y1="0" x2="640" y2="1080" stroke="#D4AF37" stroke-width="1"/>
    <line x1="1280" y1="0" x2="1280" y2="1080" stroke="#D4AF37" stroke-width="1"/>
  </g>
</svg>
